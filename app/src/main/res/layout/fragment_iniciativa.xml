<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.fragment_iniciativa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:isScrollContainer="false"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button_profile_appeal"
                android:layout_width="86dp"
                android:layout_height="85dp"
                android:layout_margin="5dp"
                android:layout_weight="0.25"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/frame51" />

            <ImageButton
                android:id="@+id/button_profile_problem"
                android:layout_width="86dp"
                android:layout_height="85dp"
                android:layout_margin="5dp"
                android:layout_weight="0.25"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/frame61" />

            <ImageButton
                android:id="@+id/button_profile_opros"
                android:layout_width="86dp"
                android:layout_height="85dp"
                android:layout_margin="5dp"
                android:layout_weight="0.25"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/frame41" />

            <ImageButton
                android:id="@+id/button_profile_iniciate"
                android:layout_width="86dp"
                android:layout_height="85dp"
                android:layout_margin="5dp"
                android:layout_weight="0.25"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/frame7" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_profile_iniciate_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textColor="#000000" />

            <androidx.cardview.widget.CardView
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/text_profile_iniciate_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#1664BB"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="#FFFFFF" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/text_profile_iniciate_autor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textColor="#000000"
                android:textColorHighlight="#FFFFFF" />

            <TextView
                android:id="@+id/text_profile_iniciate_descr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textColor="#000000" />
        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="?android:attr/listDivider" />
    </LinearLayout>

</FrameLayout>