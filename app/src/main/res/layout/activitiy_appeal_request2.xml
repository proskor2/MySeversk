<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities_appeal.activitiy_request">

    <LinearLayout
        android:id="@+id/linear4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/button_appeal_back"
            android:layout_width="110dp"
            android:layout_height="27dp"
            android:layout_margin="10dp"
            android:layout_weight="0.01"
            android:background="@null"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/left" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="30dp"
            android:layout_weight="0.01"
            android:text="Обращение"
            android:textColor="#000000"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView31"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.05"
            app:srcCompat="@drawable/rectangle" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.05"
            android:text="Описание:" />

        <EditText
            android:id="@+id/textView14"
            style="@style/Base.Widget.MaterialComponents.TextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.1"
            android:text="Текст обращения"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.05"
            app:srcCompat="@drawable/rectangle" />

        <TextView
            android:id="@+id/textView56"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.05"
            android:text="Файлы:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button_appeal_addfile"
                android:layout_width="102dp"
                android:layout_height="85dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/add" />

            <ImageView
                android:id="@+id/imageView_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                tools:srcCompat="@tools:sample/avatars" />

        </LinearLayout>

        <Button
            android:id="@+id/button_appeal_ready"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="40dp"
            android:layout_weight="0.08"
            android:backgroundTint="@color/cardview_light_background"
            android:text="Готово"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#1664BB" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>