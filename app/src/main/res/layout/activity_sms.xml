<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgr"
    tools:context=".authorization.sms">

    <LinearLayout
        android:id="@+id/linearlayout4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:baselineAligned="false"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/left_button"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@null"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/left" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0"
            android:gravity="bottom|center"
            android:text="Мы отправили на Ваш номер телефона SMS с кодом подтверждения"
            android:textAlignment="center"
            android:textColor="#494949"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0"
            android:gravity="center"
            android:text="Введите полученный код"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_smspass"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0"
            android:ems="10"
            android:inputType="number"
            android:maxLength="6"
            android:textAlignment="center" />

        <Button
            android:id="@+id/but_sms"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0"
            android:backgroundTint="#FFFFFF"
            android:text="Продолжить"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#1664BB"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_resms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_weight="0"
            android:gravity="center"
            android:text="Получить код повторно"
            android:textAlignment="center"
            android:textColor="@color/mainColor"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:gravity="center"
        android:text="© 2021 Администрация ЗАТО Северск"
        android:textAlignment="center"
        android:textColor="#CC000000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/linearlayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>